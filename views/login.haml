  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "/"} Region MAIL
          %form{:action => '/login', :method => 'POST', :style => 'margin:5px 0 0 0', :class => 'pull-right form-search'}
            %input.input-small.span2{:type => 'text', :name => 'email', :placeholder => 'email', :id => 'user_email'}
            %input.input-small{:type => 'password', :name => 'password', :placeholder => 'heslo', :id => 'user_password'}
            %button{:id => 'login', :type => 'submit', :class => 'btn', :style => 'margin:0px'} Prihlásiť

    .container
      .row
        .span12
          = flash_messages
          %ul.nav.nav-tabs
            %li{:class => is_current_path?("/new/inspiration/for_respondent")}
              %a{:href => "/new/inspiration/for_respondent" }
                Odberateľ
            %li{:class => is_current_path?("/new/inspiration/for_client")}
              %a{:href =>  "/new/inspiration/for_client" }
                Klient

          = yield
