.hero-unit
  %h2
    Kontroly
    %a.pull-right.btn.btn-large.btn-primary{:href => "/new/control"} + Pridať kontrolu
.row
  .span12
    = flash_messages
    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %tr
          %th ID
          - if @current_user.is_admin?
            %th.center Redakcia
            %th Kontrolór
            %th Respondent
          - else
            %th Respondent
          -#%th Mesto
          -#%th Adresa
          %th Dátum
          %th Typ
          %th.center Čas
          %th.center Uspešné
          %th.center Doručené
          %th.center Overené
          %th.center Nástroje
      %tbody
        - @controls.each do |control|
          - @user_controls = control.user.controls
          %tr
            %td= control.id
            - if @current_user.is_admin?
              %td.center= control.user.branch.mark
              %td
                %a{:href => "/users/#{control.user_id}", :rel => 'popover', :class => 'with_popover',
                :title => control.user.full_name,
                :'data-content' => "<strong> Kontrol: </strong>&nbsp #{@user_controls.size} </br> <strong>Úspešných: </strong> &nbsp #{@user_controls.to_a.count{|c| c.succeed?}}</br> <strong>Neoverených: </strong> &nbsp #{@user_controls.to_a.count{|c| c.verified?}}"}= control.user.full_name
              %td
                -#%a{:href => "/contacts/#{control.contact.id}"}= control.contact.full_name
                %a{:href => "/contacts/#{control.contact.id}", :rel => 'popover', :class => 'with_popover',
                :title => control.contact.full_name,
                :'data-content' => "<strong> Adresa: </strong> &nbsp #{control.contact.address.street} #{control.contact.address.number}, </br> <strong>Telefón: </strong> &nbsp#{control.contact.phone}"}= control.contact.full_name
            - else
              %td
                %a{:href => "/contact/#{control.contact_id}", :rel => 'popover', :class => 'with_popover',
                :title => control.contact.full_name,
                :'data-content' => "<strong> Mesto: </strong> &nbsp #{control.contact.address.city_name}</br> <strong> Adresa: </strong> &nbsp #{control.contact.address.street} #{control.contact.address.number}, </br> <strong>Telefón: </strong> &nbsp#{control.contact.phone}"}
                  = control.contact.full_name
            -#%td= control.contact.address.city_name
            -#%td= control.contact.address.street + ' ' + control.contact.address.number
            %td= control.created_at.strftime(TIME_FORMAT)
            %td
              - if control.control_type == 'Telefonická'
                %span.label.label-info=control.control_type
              - else
                %span.label= control.control_type
            %td.center
              - if control.time.nil?
                %span.label N/A
              - else
                = control.time
            %td.center= boolean_label_for(control.succeed?)
            %td.center= boolean_label_for(control.delivered?, :represented_if => control.succeed?)

            %td.center= boolean_label_for(control.verified?,:represented_if => (control.control_type == 'Telefonická'))
            %td.center
              %a{:href => "edit/controls/#{control.id}"} Upraviť
    = will_paginate @controls, paginate_labels
